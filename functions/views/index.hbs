    <div class="right">
        <div class id="container">
            <p style="font-size:225%">{{data.profile.user.displayName}}</p>


            <section id="righthead">
            </section>
            <section>
                <button class="button">Share my info</button>
            </section>

            <section>

            </section>



        </div>

    </div>
    <div id="data" style="display:none">{{jsonstring}}</div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
    <script src="../../js/app.js"></script>
    <script type="text/javascript">calculateRating(JSON.parse(document.getElementById('data').innerHTML))</script>
